    <artifactId>SortingAlgorithms</artifactId>
    <version>1.0-SNAPSHOT</version>

  <properties>
      <slf4j-version>1.7.25</slf4j-version>
      <junit-version>4.13.2</junit-version>
      <junit-platform-launcher-version>1.1.1</junit-platform-launcher-version>
      <log4j-version>2.17.0</log4j-version>
      <guava-version>27.0.1-jre</guava-version>
      <joda-time-version>2.9.5</joda-time-version>
      <commons-version>3.5</commons-version>
      <hakky54-version>2.5.0</hakky54-version>
  </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>15</source>
                    <target>15</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- https://mvnrepository.com/artifact/io.github.hakky54/logcaptor -->
